@model ECommerce.Models.Vendors.Vendor

@{
    ViewData["Title"] = "Delete";
}


<div class="container">
    <h3 class="text-danger">Are you sure you want to delete this vendor?</h3>
    <hr />
    <div class="vendor-details">
        <h4>Vendor Details</h4>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Back to List</a>
    </form>
</div>
